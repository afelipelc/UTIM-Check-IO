#dispositivoscontainer
  %table.tablesorter.scrollTable{cellspacing: "0"}
    %thead.fixedHeader
      %tr
        %th Clave
        %th Tipo
        %th No. Serie
        %th Propietario
        %th Última actividad
        %th Opciones
    %tbody#dispositivoslist.scrollContent{last: "0", style: "height:420px;"}
      - @devices.each do |device|
        %tr.rowdisp{"data-dispid" => device.id, id: "d#{device.id}"}
          %td
               #{device.id}
          %td
               #{device.tipo}
          %td
               #{device.noserie}
          %td
               #{device.owner.nombre}
          %td
               
            - if device.ultimavez
              = device.ultimavez.strftime("%d %b %y %H:%M:%S")
          %td
               
            %span.optionsrow
              = link_to image_tag("edit.png", :border => 0, :method => :edit, :remote => true, :class=>"editarlink"),device
              = link_to image_tag("lista.png", :border => 0, :method => :logdevice, :remote => true, :class=>"loglink"), device
      %tr#infinite-scroll