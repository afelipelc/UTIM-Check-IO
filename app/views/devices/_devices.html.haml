#dispositivoscontainer
  - if flash[:notif]
    %h4#notif.alert_info= flash[:notif]
  - if flash[:notice]
    %h4#notinfo.alert_success= flash[:notice]
  - if flash[:error]
    %h4#noterror.alert_error= flash[:error]
  %table.tablesorter.scrollTable{cellspacing: "0"}
    %thead.fixedHeader
      %tr
        %th Clave
        %th Tipo
        %th No. Serie
        %th Propietario
        %th Última actividad
        %th Opciones
    %tbody#dispositivoslist.scrollContent{last: "0", style: "height:420px;"}
      - @devices.each do |device|
        %tr.rowdisp{"data-dispid" => device.id, id: "d#{device.id}"}
          %td
               #{device.id}
          %td
               #{device.tipo}
          %td
               #{device.noserie}
          %td
            - if (device.owner)
              %p
                #{device.owner.nombre}
            - else
              %p Sin propietario
          %td
               
            - if device.ultimavez
              = device.ultimavez.strftime("%d %b %y %H:%M:%S")
          %td
               
            %span.optionsrow
              = link_to image_tag("edit.png", :border => 0), edit_device_path(device), :remote => true
              = link_to image_tag("lista.png", :border => 0), logs_entries_path(:id => device.id)
      %tr#infinite-scroll