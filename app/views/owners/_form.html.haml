= form_for @owner do |f|
  - if @owner.errors.any?
    #error_explanation
      %h2= "#{pluralize(@owner.errors.count, "error")} prohibited this owner from being saved:"
      %ul
        - @owner.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :nombre
    = f.text_field :nombre
  .field
    = f.label :tipo
    = f.text_field :tipo
  .field
    = f.label :clave
    = f.text_field :clave
  .field
    = f.label :pe
    = f.text_field :pe
  .actions
    = f.submit 'Save'
