= form_for @entry do |f|
  - if @entry.errors.any?
    #error_explanation
      %h2= "#{pluralize(@entry.errors.count, "error")} prohibited this entry from being saved:"
      %ul
        - @entry.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :ingreso
    = f.datetime_select :ingreso
  .field
    = f.label :egreso
    = f.datetime_select :egreso
  .actions
    = f.submit 'Save'
